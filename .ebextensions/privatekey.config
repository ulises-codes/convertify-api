Resources:
  AWSEBAutoScalingGroup:
    Metadata:
      AWS::CloudFormation::Authentication:
        S3Auth:
          type: 's3'
          buckets: ['codepipeline-us-east-2-886798538815']
          roleName:
            'Fn::GetOptionSetting':
              Namespace: 'aws:autoscaling:launchconfiguration'
              OptionName: 'IamInstanceProfile'
              DefaultValue: 'aws-elasticbeanstalk-ec2-role'
files:
  # Private key
  '/etc/pki/tls/certs/server.key':
    mode: '000400'
    owner: root
    group: root
    authentication: 'S3Auth'
    source: https://codepipeline-us-east-2-886798538815.s3.us-east-2.amazonaws.com/ssl/privatekey.pem
